                Value="SingleLine">
                <Setter Property="Control.Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="{x:Type tools_controls:TabControlExt}">
                            <Grid x:Name="TabControlGrid"
                                ClipToBounds="False"
                                KeyboardNavigation.TabNavigation="Local"
                                SnapsToDevicePixels="True">
